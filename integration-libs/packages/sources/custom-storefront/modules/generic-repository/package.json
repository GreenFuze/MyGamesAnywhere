{
  "name": "@mygamesanywhere/generic-repository",
  "version": "0.1.0",
  "description": "Generic game repository scanner - detects and manages games from local/cloud directories",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:scan-gdrive": "npm run build && npx tsx test-scan-gdrive.ts",
    "lint": "eslint src tests --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "game-repository",
    "game-scanner",
    "archive-detection",
    "rom-detection",
    "game-installer",
    "emulator"
  ],
  "author": "MyGamesAnywhere Team",
  "license": "GPL-3.0",
  "dependencies": {
    "@mygamesanywhere/gdrive-client": "^0.1.0",
    "uuid": "^11.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
