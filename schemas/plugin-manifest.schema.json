{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mygamesanywhere.local/schemas/plugin-manifest.schema.json",
  "title": "PluginManifest",
  "type": "object",
  "required": [
    "apiVersion",
    "pluginId",
    "name",
    "version",
    "capabilities"
  ],
  "properties": {
    "apiVersion": {
      "type": "integer",
      "minimum": 1
    },
    "pluginId": {
      "type": "string",
      "minLength": 3
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "entry": {
      "type": "string",
      "default": "dist/index.js"
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "source.scan",
          "source.launch",
          "source.monitor",
          "metadata.search",
          "metadata.fetch",
          "media.search",
          "media.fetch"
        ]
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "networkHosts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "drive": {
          "type": "object",
          "properties": {
            "readMetadata": {
              "type": "boolean",
              "default": false
            },
            "downloadFiles": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "localFsScopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "processLaunch": {
          "type": "boolean",
          "default": false
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "configSchema": {
      "type": "object"
    }
  },
  "additionalProperties": false
}