{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mygamesanywhere.local/schemas/playtime.schema.json",
  "title": "Playtime",
  "type": "object",
  "required": [
    "version",
    "updatedAt",
    "totalsByGameId"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "totalsByGameId": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sessionId",
          "gameId",
          "startedAt",
          "endedAt",
          "seconds",
          "source"
        ],
        "properties": {
          "sessionId": {
            "type": "string",
            "format": "uuid"
          },
          "gameId": {
            "type": "string",
            "format": "uuid"
          },
          "startedAt": {
            "type": "string",
            "format": "date-time"
          },
          "endedAt": {
            "type": "string",
            "format": "date-time"
          },
          "seconds": {
            "type": "integer",
            "minimum": 0
          },
          "source": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}