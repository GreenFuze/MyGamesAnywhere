{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mygamesanywhere.local/schemas/library.schema.json",
  "title": "Library",
  "type": "object",
  "required": [
    "version",
    "updatedAt",
    "games"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "games": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Game"
      }
    }
  },
  "$defs": {
    "SourceRef": {
      "type": "object",
      "required": [
        "kind"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "steam",
            "gdriveInstaller"
          ]
        },
        "appId": {
          "type": "string"
        },
        "fileId": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "kind": {
                "const": "steam"
              }
            }
          },
          "then": {
            "required": [
              "appId"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "kind": {
                "const": "gdriveInstaller"
              }
            }
          },
          "then": {
            "required": [
              "fileId"
            ]
          }
        }
      ]
    },
    "Identity": {
      "type": "object",
      "properties": {
        "igdb": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "id"
          ],
          "additionalProperties": false
        },
        "launchbox": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "id"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "Game": {
      "type": "object",
      "required": [
        "gameId",
        "title",
        "sourceRefs",
        "tags",
        "categories",
        "updatedAt"
      ],
      "properties": {
        "gameId": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "sourceRefs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SourceRef"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "identity": {
          "$ref": "#/$defs/Identity"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}