{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mygamesanywhere.local/schemas/sync-meta.schema.json",
  "title": "SyncMeta",
  "type": "object",
  "required": [
    "version",
    "deviceId",
    "lastSyncAt",
    "lwwPolicy"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "deviceId": {
      "type": "string",
      "format": "uuid"
    },
    "lastSyncAt": {
      "type": "string",
      "format": "date-time"
    },
    "lwwPolicy": {
      "type": "string",
      "enum": [
        "record"
      ]
    }
  },
  "additionalProperties": false
}