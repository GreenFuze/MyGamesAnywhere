{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mygamesanywhere.local/schemas/preferences.schema.json",
  "title": "Preferences",
  "type": "object",
  "required": [
    "version",
    "updatedAt"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "viewMode": {
      "type": "string",
      "enum": [
        "grid",
        "list"
      ],
      "default": "grid"
    },
    "sort": {
      "type": "object",
      "properties": {
        "by": {
          "type": "string",
          "enum": [
            "title",
            "lastPlayed",
            "playtime"
          ]
        },
        "dir": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ]
        }
      },
      "additionalProperties": false
    },
    "filters": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "installedOnly": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}